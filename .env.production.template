# iPEC Coach Connect - Production Environment Variables
# Copy this file to .env.production.local and fill in the values

# ===========================================
# REQUIRED - Application will not work without these
# ===========================================

# Supabase Configuration
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your_anon_key_here

# Stripe Payment Configuration
VITE_STRIPE_PUBLISHABLE_KEY=pk_live_your_stripe_publishable_key

# ===========================================
# OPTIONAL - For enhanced functionality
# ===========================================

# Application Environment
NODE_ENV=production
VITE_APP_ENV=production

# API Configuration
VITE_API_URL=https://your-production-domain.com
VITE_APP_URL=https://your-production-domain.com

# Feature Flags
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_ERROR_REPORTING=true
VITE_ENABLE_PERFORMANCE_MONITORING=true

# Security
VITE_ENABLE_CSP=true
VITE_ENABLE_HSTS=true

# ===========================================
# VERCEL ENVIRONMENT VARIABLES
# Set these in Vercel Dashboard → Settings → Environment Variables
# ===========================================

# These should be set as Vercel secrets:
# - vite_supabase_url (maps to VITE_SUPABASE_URL)
# - vite_supabase_anon_key (maps to VITE_SUPABASE_ANON_KEY) 
# - vite_stripe_publishable_key (maps to VITE_STRIPE_PUBLISHABLE_KEY)

# ===========================================
# BUILD OPTIMIZATION
# ===========================================

# Build Performance
VITE_BUILD_SOURCEMAP=false
VITE_BUILD_MINIFY=true
VITE_BUILD_REPORT=false

# Bundle Analysis (set to true for bundle size analysis)
ANALYZE_BUNDLE=false

# ===========================================
# MONITORING & ANALYTICS
# ===========================================

# Web Vitals
VITE_ENABLE_WEB_VITALS=true

# Error Reporting (if using external service)
# VITE_SENTRY_DSN=your_sentry_dsn_here
# VITE_SENTRY_ENVIRONMENT=production

# Analytics (if using Google Analytics, etc.)
# VITE_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# ===========================================
# CACHING & PERFORMANCE
# ===========================================

# Cache Configuration
VITE_ENABLE_SW_CACHE=true
VITE_CACHE_STRATEGY=cacheFirst

# CDN Configuration (if using)
# VITE_CDN_URL=https://your-cdn-domain.com

# ===========================================
# SECURITY HEADERS
# ===========================================

# Content Security Policy
VITE_CSP_REPORT_URI=https://your-domain.com/api/csp-report

# Additional Security
VITE_ENABLE_SECURITY_HEADERS=true

# ===========================================
# REGIONAL SETTINGS
# ===========================================

# Primary deployment region
VERCEL_REGION=iad1

# ===========================================
# LOGGING & DEBUGGING
# ===========================================

# Set to false in production
VITE_DEBUG=false
VITE_VERBOSE_LOGGING=false

# Log Level (error, warn, info, debug)
VITE_LOG_LEVEL=error